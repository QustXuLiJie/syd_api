<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <!-- 异常捕获AOP  start -->
    <bean id="dealException" class="com.mobanker.shanyidai.api.aop.ExceptionAop"></bean>
    <aop:config proxy-target-class="true">
        <!-- 异常处理 -->
        <aop:aspect id="exceptionAop" ref="dealException">
            <aop:pointcut id="exceptionPointCut"
                          expression="execution(* com.mobanker.shanyidai.api.controller.*.*.*(..))" />
            <aop:around pointcut-ref="exceptionPointCut" method="deal" />
        </aop:aspect>
    </aop:config>

    <!-- 登陆、握手拦截 -->
    <bean id="signLoginAspect" class="com.mobanker.shanyidai.api.aop.SignLoginAop"></bean>
    <aop:config proxy-target-class="true">
        <!-- 异常处理 -->
        <aop:aspect id="signLoginAop" ref="signLoginAspect">
            <aop:pointcut id="signLoginPointCut"
                          expression="execution(* com.mobanker.shanyidai.api.controller.*.*.*(..))" />
            <aop:around pointcut-ref="signLoginPointCut" method="validSign" />
        </aop:aspect>
    </aop:config>

    <!-- ==========Service层AOP拦截====================================== -->
    <context:annotation-config />
    <!-- 自动扫描 -->
    <context:component-scan base-package="com.mobanker.shanyidai.api.service">
        <context:exclude-filter type="annotation"
                                expression="org.springframework.stereotype.Controller" />
    </context:component-scan>
    <!-- Service层Log日志输出 -->
    <bean id="logAspect" class="com.mobanker.shanyidai.api.aop.LogAop"></bean>
    <aop:config proxy-target-class="true">
        <aop:aspect id="logAop" ref="logAspect">
            <aop:pointcut id="logPointCut"
                          expression="execution(* com.mobanker.shanyidai.api.service.*.*.*(..)) and !execution(* com.mobanker.shanyidai.api.service.log.*.*(..))
                            and !execution(* com.mobanker.shanyidai.api.service.common.*.*(..)) and !execution(* com.mobanker.shanyidai.api.service.system.*.*(..))" />
            <aop:around pointcut-ref="logPointCut" method="logAround" />
        </aop:aspect>
    </aop:config>
</beans>
